
<script src="https://cdn.tailwindcss.com"></script>
<%= render :template => "navbar" %>
<main class="flex w-100 items-center justify-center min-h-screen flex-col">
    <h1 class="text-2xl md:text-4xl font-semibold text-white mb-5">Generate su código QR</h1>
    <div class="md:flex">
        <section
            class="bg-white rounded-2xl py-10 px-4 md:px-10 lg:px-16 lg:py-12 w-full md:w-3/5 mr-3 flex items-center justify-center">
            <article class="text-center">
                <form class="mt-5" action="/create/<%=@id%>" method="GET" >
                    <p class="text-xl mb-3">Sitio web (URL)</p>
                    <input
                        class="shadow appearance-none border rounded-xl w-full py-3 px-3 text-gray-700 mb-5 border-zinc-500"
                        type="text" name="url" placeholder="<%=@url%>">
                    <button
                        class="bg-appweb-2 text-white font-semibold transform hover:scale-105 duration-300 transition-all hover:bg-blue-800 text-xl py-3 px-12 rounded-xl">
                        <svg class="h-9 w-9 text-whithe inline" style="margin-right:15px"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round">  <polyline points="23 4 23 10 17 10" />  <polyline points="1 20 1 14 7 14" />  <path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15" /></svg>Generar código QR</button>
                </form>
            </article>
        </section>
        <%= render :partial => 'view_img_QR'%>
    </div>
</main>
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>